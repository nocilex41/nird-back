            .toolbox-front {
                width: 300px;
                height: 150px;
                transform: translateZ(75px);
            }

            .toolbox-top {
                width: 300px;
                height: 150px;
                transform: rotateX(90deg) translateZ(75px);
            }

            .toolbox-right {
                width: 150px;
                height: 150px;
                transform: rotateY(90deg) translateZ(300px);
            }

            .toolbox-left {
                width: 150px;
                height: 150px;
            }

            .toolbox-bottom {
                width: 300px;
                height: 150px;
                transform: rotateX(-90deg) translateZ(75px);
            }

            .toolbox-back {
                width: 300px;
                height: 150px;
                transform: translateZ(-75px) rotateY(180deg);
            }

            .tools-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 1rem;
            }

            .modal-content {
                width: 95%;
            }

            .modal-body {
                padding: 1.5rem;
            }

            #modalTitle {
                font-size: 1.5rem;
            }

            #modalDescription {
                font-size: 1rem;
            }
        }


