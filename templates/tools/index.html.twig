    <style>
        /* ====================================
       TOOLBOX CSS - Bo√Æte √† Outils 3D
       ==================================== */

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            overflow-x: hidden;
        }

        .toolbox-page {
            max-height: 100vh;
            background: white;
            position: relative;
            overflow: hidden;
        }

        /* ====================================
           BACKGROUND ANIMATIONS
           ==================================== */
        .background {
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom right, #eef2ff, #ffffff, #faf5ff);
            z-index: 0;
        }

        .blob {
            position: absolute;
            width: 384px;
            height: 384px;
            border-radius: 9999px;
            mix-blend-mode: multiply;
            filter: blur(64px);
            opacity: 0.2;
            animation: blob 7s infinite;
        }

        .blob-1 {
            top: 0;
            left: 0;
            background: #d8b4fe;
        }

        .blob-2 {
            top: 0;
            right: 0;
            background: #fde047;
            animation-delay: 2s;
        }

        .blob-3 {
            bottom: 0;
            left: 50%;
            background: #fbcfe8;
            animation-delay: 4s;
        }

        @keyframes blob {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }
            33% {
                transform: translate(30px, -50px) scale(1.1);
            }
            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }
        }

        .grid-pattern {
            position: absolute;
            inset: 0;
            background-image:
                linear-gradient(to right, rgba(229, 231, 235, 0.3) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(229, 231, 235, 0.3) 1px, transparent 1px);
            background-size: 40px 40px;
            opacity: 0.5;
            z-index: 0;
        }

        /* ====================================
           HEADER
           ==================================== */
        .header {
            position: relative;
            z-index: 10;
            text-align: center;
            padding: 1rem 1rem 2rem;
        }

        .logo-container {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .logo-badge {
            width: 100px;
            height: 100px;
            background: linear-gradient(to bottom right, #c084fc, #f9a8d4);
            border-radius: 1rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border: 4px solid white;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            color: white;
            margin-bottom: 0.25rem;
        }

        .logo-text {
            color: white;
            font-weight: bold;
            font-size: 0.65rem;
            letter-spacing: 0.05em;
        }

        .main-title {
            font-size: 4rem;
            font-weight: bold;
            background: linear-gradient(to right, #9333ea, #db2777, #4f46e5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            letter-spacing: -0.025em;
        }

        .subtitle {
            font-size: 1.5rem;
            color: #374151;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .description {
            font-size: 1.125rem;
            color: #4b5563;
            max-width: 42rem;
            margin: 0 auto;
            line-height: 1.75;
        }

        /* ====================================
           TOOLBOX 3D SCENE
           ==================================== */
        .toolbox-scene {
            position: relative;
            z-index: 10;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 450px;
            padding: 2rem;
            perspective: 1500px;
        }

        .toolbox-container {
            position: relative;
            width: 100%;
            max-width: 600px;
        }

        /* ====================================
           TOOLBOX CLOSED STATE (3D Box)
           ==================================== */
        .toolbox-closed {
            display: block;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .toolbox-closed:hover {
            transform: scale(1.05);
        }

        .toolbox-closed.hidden {
            display: none;
        }

        .toolbox-box {
            position: relative;
            width: 400px;
            height: 300px;
            margin: 0 auto;
            transform-style: preserve-3d;
            transform: rotateX(-15deg) rotateY(20deg);
            transition: all 0.5s ease;
        }

        .toolbox-closed:hover .toolbox-box {
            transform: rotateX(-20deg) rotateY(25deg);
        }

        .toolbox-face {
            position: absolute;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border: 3px solid #991b1b;
            box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.2);
        }

        .toolbox-front {
            width: 400px;
            height: 200px;
            transform: translateZ(100px);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }

        .toolbox-top {
            width: 400px;
            height: 200px;
            transform: rotateX(90deg) translateZ(100px);
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        }

        .toolbox-right {
            width: 200px;
            height: 200px;
            transform: rotateY(90deg) translateZ(302px);
        }

        .toolbox-left {
            width: 200px;
            height: 200px;
            transform: rotateY(-90deg) translateZ(100px);
        }

        .toolbox-bottom {
            width: 400px;
            height: 200px;
            transform: rotateX(-90deg) translateZ(100px);
        }

        .toolbox-back {
            width: 400px;
            height: 200px;
            transform: translateZ(-100px) rotateY(180deg);
        }

        .toolbox-handle {
            width: 120px;
            height: 30px;
            background: #78716c;
            border-radius: 15px;
            margin-bottom: 1rem;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
            position: relative;
        }

        .toolbox-handle::before {
            content: '';
            position: absolute;
            width: 8px;
            height: 8px;
            background: #292524;
            border-radius: 50%;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
        }

        .toolbox-handle::after {
            content: '';
            position: absolute;
            width: 8px;
            height: 8px;
            background: #292524;
            border-radius: 50%;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
        }

        .toolbox-lock {
            width: 50px;
            height: 50px;
            margin-bottom: 1rem;
        }

        .toolbox-lock svg {
            width: 100%;
            height: 100%;
            color: #fbbf24;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        }

        .toolbox-label {
            color: white;
            font-weight: bold;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        /* ====================================
           TOOLBOX OPENED STATE
           ==================================== */
        .toolbox-opened {
            display: none;
            animation: toolboxOpen 0.6s ease-out forwards;
        }

        .toolbox-opened.active {
            display: block;
        }

        @keyframes toolboxOpen {
            from {
                opacity: 0;
                transform: scale(0.8) translateY(50px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .toolbox-lid {
            width: 100%;
            height: 60px;
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            border: 3px solid #991b1b;
            border-radius: 12px 12px 0 0;
            margin-bottom: -5px;
            box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .lid-inner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100px;
            height: 25px;
            background: #78716c;
            border-radius: 12px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .toolbox-base {
            width: 100%;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border: 3px solid #991b1b;
            border-radius: 0 0 12px 12px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        /* ====================================
           TOOLS GRID
           ==================================== */
