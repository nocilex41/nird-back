{% extends 'base.html.twig' %}

{% block title %}Accueil | AnimeTrack{% endblock %}

{% block stylesheets %}
    {{ asset('styles/home.css') }}g
{% endblock %}

{% block body %}
<div class="container">

        <div class="background">
            <div class="blob blob-1"></div>
            <div class="blob blob-2"></div>
            <div class="blob blob-3"></div>
        </div>

        <div class="grid-pattern"></div>


        <!-- Interactive Bubbles -->
        <div class="bubbles-container">
            <!-- Logo NIRD au centre -->
            <div class="logo-center">
                <div class="">
                    <img src="{{ asset('assets/images/logo-nird.png') }}" alt="Logo NIRD" class="logo-image">
                    <p class="logo-text">LOGO NIRD</p>
                </div>
            </div>

            <!-- Bubble 1: Linux -->
            <div class="bubble" data-bubble="linux" style="top: 20%; left: 20%;">
                <a class="bubble-inner bubble-purple" href="{{ path('app_linux') }}">
                    <svg class="bubble-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                        <line x1="8" y1="21" x2="16" y2="21"></line>
                        <line x1="12" y1="17" x2="12" y2="21"></line>
                    </svg>
                    <p class="bubble-title">Linux</p>
                </a>
            </div>

            <!-- Bubble 2: Boîte à outils -->
            <div class="bubble" data-bubble="outils" style="top: 12%; left: 50%;">
                <a class="bubble-inner bubble-orange" href="{{ path('app_tools') }}">
                    <svg class="bubble-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                    </svg>
                    <p class="bubble-title">Boîte à outils</p>
                </a>
            </div>


            <!-- Bubble 3: Reconditionnement -->
            <div class="bubble" data-bubble="reconditionne" style="top: 20%; left: 80%;">
                <a class="bubble-inner bubble-green"  href="{{ path('app_recondition') }}">
                    <svg class="bubble-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21.5 2v6h-6M2.5 22v-6h6M2 11.5a10 10 0 0 1 18.8-4.3M22 12.5a10 10 0 0 1-18.8 4.2"></path>
                    </svg>
                    <p class="bubble-title">Reconditionnement</p>
                </a>
            </div>

            <!-- Bubble 4: Map -->
            <div class="bubble" data-bubble="map" style="top: 65%; left: 25%;">
                <a class="bubble-inner bubble-cyan" href="{{ path('app_map') }}">
                    <svg class="bubble-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon>
                        <line x1="8" y1="2" x2="8" y2="18"></line>
                        <line x1="16" y1="6" x2="16" y2="22"></line>
                    </svg>
                    <p class="bubble-title">Map</p>
                </a>
            </div>

            <!-- Bubble 5: Démarche -->
            <div class="bubble" data-bubble="demarche" style="top: 65%; left: 75%;">
                <a class="bubble-inner bubble-pink" href="{{ path('app_demarche') }}">
                    <svg class="bubble-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <polyline points="19 12 12 19 5 12"></polyline>
                    </svg>
                    <p class="bubble-title">Démarche</p>
                </a>
            </div>

            <!-- Bubble 6:  -->
            <div class="bubble" data-bubble="sexy" style="top: 88%; left: 50%;">
                <a class="bubble-inner bubble-red" href="{{ path('app_faq') }}">
                    <svg class="bubble-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                    <p class="bubble-title">FAQ</p>
                </a>
            </div>
        </div>

        <!-- Call to Action
        <footer class="cta-section">
            <p class="cta-text">✨ Survolez les bulles pour explorer l'univers NIRD ✨</p>
            <button class="cta-button">Rejoindre la Résistance</button>
        </footer>
    </div>-->

{% endblock %}
