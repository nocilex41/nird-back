        .modal-link svg {
            width: 24px;
            height: 24px;
            margin-right: 1rem;
            flex-shrink: 0;
        }

        /* ====================================
           CTA SECTION
           ==================================== */
        .cta-section {
            position: relative;
            z-index: 10;
            text-align: center;
            margin-top: 3rem;
            padding: 0 1rem 4rem;
        }

        .cta-text {
            color: #4b5563;
            margin-bottom: 1.5rem;
            font-size: 1.125rem;
            font-weight: 500;
        }

        .cta-button {
            background: linear-gradient(to right, #9333ea, #db2777);
            color: white;
            padding: 1rem 2.5rem;
            border-radius: 9999px;
            font-weight: bold;
            font-size: 1.125rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .cta-button:hover {
            box-shadow: 0 25px 50px -12px rgba(147, 51, 234, 0.5);
            transform: scale(1.05) translateY(-4px);
        }

        /* ====================================
           RESPONSIVE
           ==================================== */
        @media (max-width: 768px) {
            .main-title {
                font-size: 2.5rem;
            }

            .toolbox-box {
                width: 300px;
                height: 225px;
