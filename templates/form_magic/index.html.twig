    <script>
        // ====== SYST√àME DE PORTAIL D'OUVERTURE AM√âLIOR√â ======

        document.addEventListener('DOMContentLoaded', function() {
            createEnhancedPortal();
        });

        function createEnhancedPortal() {
            // Cr√©ation du conteneur du portail
            const portalContainer = document.createElement('div');
            portalContainer.id = 'portalLoader';
            portalContainer.innerHTML = `
        <div class="portal-overlay">
            <!-- Anneaux du portail -->
            <div class="portal-ring portal-ring-1"></div>
            <div class="portal-ring portal-ring-2"></div>
            <div class="portal-ring portal-ring-3"></div>
            <div class="portal-ring portal-ring-4"></div>

            <!-- Centre √©nerg√©tique -->
            <div class="portal-center">
                <div class="portal-energy"></div>
                <div class="portal-core">
                    <div class="portal-symbol">üåå</div>
                </div>
            </div>

        </div>
        <div class="loading-status">Initialisation du Nexus...</div>
    `;

            document.body.appendChild(portalContainer);

            // Animation du texte de chargement
            const loadingText = portalContainer.querySelector('.loading-status');
            const messages = [
                'Initialisation du Nexus...',
                'Ouverture du portail...',
                'Synchronisation quantique...',
                'Acc√®s accord√©...'
            ];

            let messageIndex = 0;
            const textInterval = setInterval(() => {
                messageIndex = (messageIndex + 1) % messages.length;
                if (loadingText) {
                    loadingText.textContent = messages[messageIndex];
                }
            }, 600);

            // Effet sonore am√©lior√©
            playPortalSound();

            // Retirer le loader apr√®s l'animation
            setTimeout(() => {
                clearInterval(textInterval);
                if (portalContainer) {
                    // Animation de fermeture
                    portalContainer.style.opacity = '0';
                    setTimeout(() => {
                        portalContainer.remove();
                        // Afficher le contenu principal
                        showMainContent();
                    }, 800);
                }
            }, 3000);
        }

        function playPortalSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const now = audioContext.currentTime;

                // Son principal (swoosh cosmique)
                const oscillator1 = audioContext.createOscillator();
                const gainNode1 = audioContext.createGain();

                oscillator1.connect(gainNode1);
                gainNode1.connect(audioContext.destination);

                oscillator1.type = 'sine';
                oscillator1.frequency.setValueAtTime(150, now);
                oscillator1.frequency.exponentialRampToValueAtTime(600, now + 1);

                gainNode1.gain.setValueAtTime(0.15, now);
                gainNode1.gain.exponentialRampToValueAtTime(0.01, now + 1);

                oscillator1.start(now);
                oscillator1.stop(now + 1);

                // Son d'harmonie (effet cristallin)
                const oscillator2 = audioContext.createOscillator();
                const gainNode2 = audioContext.createGain();

                oscillator2.connect(gainNode2);
                gainNode2.connect(audioContext.destination);

                oscillator2.type = 'triangle';
                oscillator2.frequency.setValueAtTime(800, now + 0.3);
                oscillator2.frequency.exponentialRampToValueAtTime(400, now + 1.3);

                gainNode2.gain.setValueAtTime(0.1, now + 0.3);
                gainNode2.gain.exponentialRampToValueAtTime(0.01, now + 1.3);

                oscillator2.start(now + 0.3);
                oscillator2.stop(now + 1.3);

            } catch (e) {
                console.log('Audio Web API non support√©e');
            }
        }

        function showMainContent() {
            const formPage = document.querySelector('.form-page') || document.querySelector('main');

            if (formPage) {
                formPage.style.opacity = '0';
                formPage.style.transform = 'translateY(30px)';
                formPage.style.filter = 'blur(10px)';

                setTimeout(() => {
                    formPage.style.transition = 'all 1s cubic-bezier(0.4, 0, 0.2, 1)';
                    formPage.style.opacity = '1';
                    formPage.style.transform = 'translateY(0)';
                    formPage.style.filter = 'blur(0)';
                }, 100);
            }
        }

